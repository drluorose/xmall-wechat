/* pages/payResult/payResult.wxss */

page {
  min-height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  height: 500rpx;
  background: #fff;
}

.pay-result {
  background: #fff;
  width: 100%;
  height: 100%;
}

.pay-result .msg {
  text-align: center;
  margin: 0 auto;
  color: #2bab25;
  font-size: 38rpx;
  margin-top: 80rpx;
  margin-bottom: 20rpx;
}

.time {
  color: #b4282d;
}

.pay-result .btns {
  text-align:center;
}

.pay-result .btn {
  text-align: center;
  margin: 0 20rpx;
  width: 200rpx;
  line-height: 65rpx;
  border-radius: 3rpx;
  font-size: 28rpx;
  color: #555;
  height:65rpx;
}

.zan-btn--small.active {
  background: #ebebeb;
}

.pay-result .error .msg {
  color: #b4282d;
}

.pay-result .error .tips {
  color: #7f7f7f;
  margin-bottom: 70rpx;
}

.pay-result .error .tips .p {
  font-size: 26rpx;
  line-height: 42rpx;
  text-align: center;
}

.pay-result .success .tips {
  color: #7f7f7f;
  margin-bottom: 70rpx;
}

.pay-result .success .tips .p {
  font-size: 26rpx;
  line-height: 42rpx;
  text-align: center;
}
