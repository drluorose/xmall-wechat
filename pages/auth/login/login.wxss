/* pages/auth/login/login.wxss */

.form-box {
  width: 650rpx;
  overflow: hidden;
  margin: 0 auto;
  background: #fff;
}

.logo {
  width: 145rpx;
  height: 145rpx;
  margin: 0 auto;
  display: block;
  margin-top: 180rpx;
  margin-bottom: 70rpx;
}

.form-item {
  position: relative;
  background: #fff;
  height: 100rpx;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #d9d9d9;
}

.form-item .username, .form-item .password, .form-item .code {
  position: absolute;
  top: 26rpx;
  left: 0;
  display: block;
  width: 100%;
  height: 44rpx;
  background: #fff;
  color: #333;
  font-size: 30rpx;
}

.form-item .clear {
  position: absolute;
  top: 26rpx;
  right: 18rpx;
  z-index: 2;
  display: block;
  background: #fff;
  height: 44rpx;
  width: 44rpx;
}

.login-btn {
  margin-top: 70rpx;
  font-size: 30rpx;
  width: 100%;
}

.form-item-text {
  height: 35rpx;
  width: 100%;
}
