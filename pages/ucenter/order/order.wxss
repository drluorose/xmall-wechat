/* pages/ucenter/order/order.wxss */

page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.no-order {
  position: absolute;
  top: -200rpx;
  right: 0;
  bottom: 0;
  left: 0;
  height: 250rpx;
  margin: auto;
  text-align:center;
}

.no-order .i {
  width: 200rpx;
  height: 200rpx;
}

.no-order .t {
  font-size: 26rpx;
  color: #999;
}

.zan-tab {
  height: 45px;
  position: fixed;
}

.orders {
  height: auto;
  width: 100%;
  overflow: hidden;
  padding-top: 90rpx;
}

.order {
  margin-top: 20rpx;
  background: #fff;
}

.order .h {
  height: 83.3rpx;
  line-height: 83.3rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  border-bottom: 1px solid #f4f4f4;
  font-size: 27rpx;
  color: #555;
}

.order .h .l {
  float: left;
}

.order .h .r {
  float: right;
  color: #b4282d;
  font-size: 27rpx;
}

.order .goods {
  display: flex;
  align-items: center;
  height: 180rpx;
  margin-left: 31.25rpx;
}

.order .goods .img {
  height: 145.83rpx;
  width: 145.83rpx;
  background: #f4f4f4;
}

.order .goods .img image {
  height: 145.83rpx;
  width: 145.83rpx;
}

.order .goods .info {
  height: 145rpx;
  flex: 1;
  padding-left: 30rpx;
}

.order .goods .name {
  margin-top: 30rpx;
  display: block;
  height: 44rpx;
  line-height: 44rpx;
  color: #555;
  font-size: 27rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.order .goods .number {
  display: block;
  height: 37rpx;
  line-height: 37rpx;
  color: #777;
  font-size: 25rpx;
}

.order .b {
  height: 103rpx;
  line-height: 103rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  border-top: 1px solid #f4f4f4;
  font-size: 27rpx;
  color: #555;
}

.order .b .l {
  float: left;
}

.order .b .r {
  float: right;
}

.zan-btn--small.active {
  background: #ebebeb;
}
