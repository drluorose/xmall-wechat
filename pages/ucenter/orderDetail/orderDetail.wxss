/* pages/ucenter/orderDetail/orderDetail.wxss */

page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.order-info {
  padding-top: 35rpx;
  background: #fff;
  height: auto;
  overflow: hidden;
  font-size: 28rpx;
  color: #555;
}

.item-a {
  padding-left: 32rpx;
  height: 30rpx;
  padding-bottom: 12rpx;
  line-height: 30rpx;
}

.item-b {
  padding-left: 32rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 30rpx;
}

.item-c {
  margin-left: 32rpx;
  border-top: 1px solid #f4f4f4;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-c .r {
  height: 95rpx;
  display: flex;
  align-items: center;
  padding-right: 16rpx;
}

.item-c .r .btn {
  float: right;
}

.item-c .cost {
  color: #b4282d;
}

.item-c .btn {
  line-height: 66rpx;
  border-radius: 5rpx;
  text-align: center;
  margin: 0 15rpx;
  padding: 0 20rpx;
  height: 66rpx;
}

.zan-btn--small.active {
  background: #ebebeb;
}

.order-goods {
  margin-top: 20rpx;
  background: #fff;
}

.order-goods .h {
  height: 90rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  border-bottom: 1px solid #f4f4f4;
  font-size: 28rpx;
  color: #555;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-goods .h .status {
  color: #b4282d;
}

.order-goods .item {
  display: flex;
  align-items: center;
  height: 192rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  border-bottom: 1px solid #f4f4f4;
}

.order-goods .item:last-child {
  border-bottom: none;
}

.order-goods .item .img {
  height: 145.83rpx;
  width: 145.83rpx;
  background: #f4f4f4;
}

.order-goods .item .img image {
  height: 145.83rpx;
  width: 145.83rpx;
}

.order-goods .item .info {
  flex: 1;
  height: 145.83rpx;
  margin-left: 20rpx;
}

.order-goods .item .t {
  margin-top: 8rpx;
  height: 33rpx;
  line-height: 33rpx;
  margin-bottom: 10.5rpx;
  color: #555;
  font-size: 28rpx;
}

.order-goods .item .t .name {
  display: block;
  float: left;
  height: 33rpx;
  line-height: 33rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 520rpx;
}

.order-goods .item .t .number {
  display: block;
  float: right;
  height: 33rpx;
  text-align: right;
  line-height: 33rpx;
}

.order-goods .item .attr {
  height: 29rpx;
  line-height: 29rpx;
  color: #999;
  margin-bottom: 15rpx;
  font-size: 25rpx;
}

.order-goods .item .price {
  height: 30rpx;
  line-height: 30rpx;
  color: #555;
  font-size: 28rpx;
  display: inline-block;
}

.order-goods .item .originPrice {
  height: 30rpx;
  line-height: 30rpx;
  color: #999;
  font-size: 28rpx;
  display: inline-block;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.order-bottom {
  margin-top: 20rpx;
  padding-left: 31.25rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  margin-bottom: 20rpx;
}

.order-bottom .address {
  height: 128rpx;
  padding-top: 25rpx;
  border-bottom: 1px solid #f4f4f4;
  font-size: 28rpx;
  color: #555;
}

.order-bottom .address .t {
  height: 35rpx;
  line-height: 35rpx;
  margin-bottom: 10rpx;
}

.order-bottom .address .name {
  display: inline-block;
  height: 35rpx;
  width: 140rpx;
  line-height: 35rpx;
}

.order-bottom .address .mobile {
  display: inline-block;
  height: 35rpx;
  line-height: 35rpx;
}

.order-bottom .address .b {
  height: 35rpx;
  line-height: 35rpx;
}

.order-bottom .total {
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f4f4f4;
  font-size: 28rpx;
  color: #555;
}

.order-bottom .total .t {
  height: 35rpx;
  margin-bottom: 8rpx;
  display: flex;
}

.order-bottom .total .label {
  width: 140rpx;
  display: inline-block;
  height: 35rpx;
  line-height: 35rpx;
  color: #7f7f7f;
}

.order-bottom .total .txt {
  flex: 1;
  display: inline-block;
  height: 35rpx;
  line-height: 35rpx;
}

.order-bottom .pay-fee {
  height: 81rpx;
  line-height: 81rpx;
  font-size: 28rpx;
  color: #b4282d;
}

.order-bottom .pay-fee .label {
  display: inline-block;
  width: 140rpx;
}

.order-bottom .pay-fee .txt {
  display: inline-block;
  width: 140rpx;
}

.order-service {
  padding-bottom: 40rpx;
  background: #fff;
}

.service-time {
  margin-top: 0.20rp;
  font-size: 27rpx;
  color: #7f7f7f;
  padding: 30rpx 32rpx;
}

.service-time .time {
  color: #555;
}

.service-btn {
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  margin-top: -10rpx;
}

.service-btn .btn {
  width: 330rpx;
  height: 75rpx;
  line-height: 75rpx;
  margin-left: 0;
  margin-right: 0;
  font-size: 28rpx;
}
